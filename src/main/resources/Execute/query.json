        "database/city/ward@name=ward1 and database/city/name=Bangalore",
        "database/city/ward/name=ward1 and database/city/name=Bangalore"
      ],
      "field":[
        {
          "selected":true,"content":"first_name"
        },
        {
          "selected":true,"content":"first_name"
        }
      ],
      "name":"xml_data",
      "source":"pupils"
    },
    "json_base":{
      "field":[
        {
          "selected":true,
          "content":"first_name"
        },
        {
          "selected":false,
          "content":"last_name"
        },
        {
          "selected":true,
          "content":"email"
        }
      ],
      "name":"test_data",
      "source":"test"
    },
    "mysql_base":[
      {
        "condition":"first_name=\"tom\" and last_name=\"jerry\" or email=\"tomandjerry@gmail.com\"",
        "field":[
          {
            "selected":true,
            "content":"first_name"
          },
          {
            "selected":false,
            "content":"last_name"
          },
          {
            "selected":true,
            "content":"email"
          }
        ],
        "name":"market_data",
        "source":"market",
        "table":"students"
      },
      {
        "field":[
          {
            "selected":true,
            "content":"first_name"
          },
          {
            "selected":false,
            "content":"last_name"
          },
          {
            "selected":true,
            "content":"email"
          }
        ],
        "name":"shop_data",
        "source":"shop",
        "table":"students"
      }
    ]
  },
  "data":{
    "xml":[
      {
        "name":"pupils",
        "url":"/home/albus/Documents/students.xml",
        "local":true
      }
    ],
    "csv":[
      {
        "name":"people",
        "url":"/home/albus/Documents/students.csv",
        "local":true
      }
    ],
    "json":[
      {
        "name":"test",
        "url":"./test.json",
        "local":true
      }
    ],
    "mysql":[
      {
        "password":1234,
        "name":"market",
        "url":"jdbc:mysql://localhost:3306/market",
        "username":"root"
      },
      {
        "password":1234,
        "name":"sho",
        "url":"jdbc:mysql://localhost:3306/market",
        "username":"root"
      }
    ]
  },
  "operation":{
    "union":[
      {
        "name":"all_students",
        "source":[
          "market_data",
          "shop_data",
          "test_data"
        ]
      }
    ],
    "join":[
      {
        "name":"student_courses",
        "source":[
          {
            "type":"parent",
            "content":"all_students",
            "on":"//ward@name"
          },
          {
            "type":"child",
            "content":"courses",
            "on":"course_id"
          }
        ]
      },
      {
        "source":[
          {
            "type":"parent",
            "content":"all_students",
            "on":"#roottag/#childtag/ward/name"
          },
          {
            "type":"child",
            "content":"courses",
            "on":"course_id"
          }
        ]
      }
    ]
  }
}